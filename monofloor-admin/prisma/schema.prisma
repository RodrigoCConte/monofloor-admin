  // Descrição
  descricao       String                  @db.Text
  m2Intervencao   Decimal?                @map("m2_intervencao") @db.Decimal(10, 2)

  // Status
  status          IntervencaoStatus       @default(PLANEJANDO)

  // Datas
  dataInicio      DateTime?               @map("data_inicio")
  dataFim         DateTime?               @map("data_fim")

  // Custos
  custoEstimado   Decimal?                @map("custo_estimado") @db.Decimal(12, 2)
  custoReal       Decimal?                @map("custo_real") @db.Decimal(12, 2)
  cobradoCliente  Boolean                 @default(false) @map("cobrado_cliente")

  // Equipe
  equipeDesignada String?                 @map("equipe_designada")

  // Resultado
  relatorioFinal  String?                 @map("relatorio_final") @db.Text
  fotos           String[]

  // Timestamps
  createdAt       DateTime                @default(now()) @map("created_at")
  updatedAt       DateTime                @updatedAt @map("updated_at")

  @@index([status])
  @@map("intervencoes")
}

enum IntervencaoStatus {
  PLANEJANDO            // Planejando intervenção
  AGUARDANDO_MATERIAL   // Aguardando material
  AGUARDANDO_EQUIPE     // Aguardando disponibilidade
  EM_EXECUCAO           // Em execução
  CONCLUIDA             // Concluída
  CANCELADA             // Cancelada
}

// =============================================
// TIMELINE EVENT (Histórico do projeto)
// =============================================
model TimelineEvent {
  id              String              @id @default(uuid())
  projectId       String              @map("project_id")
  project         Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Módulo e tipo
  modulo          ProjectModule
  tipo            String              // STATUS_CHANGE, VT_AGENDADA, PROPOSTA_ENVIADA, etc
  subtipo         String?             // Detalhamento adicional

  // Descrição
  titulo          String
  descricao       String?             @db.Text

  // Dados de mudança
  dadosAnteriores Json?               @map("dados_anteriores")
  dadosNovos      Json?               @map("dados_novos")

  // Metadados
  metadata        Json?               // Dados extras

  // Quem fez
  userId          String?             @map("user_id")
  userName        String?             @map("user_name")
  adminId         String?             @map("admin_id")
  adminName       String?             @map("admin_name")

  // Timestamps
  createdAt       DateTime            @default(now()) @map("created_at")

  @@index([projectId, createdAt])
  @@index([modulo])
  @@map("timeline_events")
}

enum ProjectModule {
  COMERCIAL
  PIUI
  PLANEJAMENTO
  EXECUCAO
  FINALIZADO
  POS_VENDA
}

// =============================================
// PROJECT VIDEO (Galeria de vídeos do projeto)
// =============================================
model ProjectVideo {
  id              String              @id @default(uuid())
  projectId       String              @map("project_id")
  project         Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Info do vídeo
  titulo          String
  descricao       String?             @db.Text
  url             String              @db.Text
  thumbnailUrl    String?             @map("thumbnail_url")
  duracaoSegundos Int?                @map("duracao_segundos")

  // Categorização
  tipo            VideoTipo
  fase            ProjectModule

  // Ordenação
  ordem           Int                 @default(0)

  // Timestamps
  createdAt       DateTime            @default(now()) @map("created_at")

  @@index([projectId, fase])
  @@map("project_videos")
}

enum VideoTipo {
  VISITA_INICIAL    // Vídeo da visita inicial
  DURANTE_EXECUCAO  // Durante a execução
  ENTREGA           // Vídeo de entrega
  POS_VENDA         // Vídeo de pós-venda
  DEPOIMENTO        // Depoimento do cliente
  OUTRO             // Outro tipo
}
